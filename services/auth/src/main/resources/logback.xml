<configuration>
    <!-- Console Appender with thread and coroutine context -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread][%X{coroutine-id}] [%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Enable DEBUG for your package -->
    <!--    <logger name="network" level="DEBUG" additivity="false">-->
    <!--        <appender-ref ref="CONSOLE"/>-->
    <!--    </logger>-->

    <!-- Root logger at INFO for other classes -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>